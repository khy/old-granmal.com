<header>
  <h1>Budget</h1>

  <ul class="right-actions">
    <li>
      <a href="/">
        <span class="glyphicon glyphicon-home"></span>
      </a>
    </li>
  </ul>
</header>

<main>
  <ol class="transactions">
    {{#each transactions}}
      <li>
        <div class="details">
          <a class="transactionType" href="transactionTypes/{{transactionType.guid}}">{{transactionType.name}}</a> /
          <a class="account" href="accounts/{{account.guid}}">{{account.name}}</a>
        </div>
        <div class="amount {{amount.class}}">
          ${{amount.value}}
        </div>
      </li>
    {{/each}}
  </ol>
</main>
