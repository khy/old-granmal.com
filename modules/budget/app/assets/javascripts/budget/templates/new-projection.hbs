<header>
  <h1>New Projection</h1>

  <ul class="right-actions">
    <li>
      <a href="#" class="close">
        <span class="glyphicon glyphicon-remove"></span>
      </a>
    </li>
  </ul>
</header>

<main class="form">
  <form>
    <div class="field">
      <input type="text" name="name" placeholder="Name" value="{{name}}"></input>

      {{#if errors.name}}
        <ol class="input-messages">
          <li class="input-error">{{errors.name}}</li>
        </ol>
      {{/if}}
    </div>

    <button type="submit">Create</button>
  </form>
</main>
