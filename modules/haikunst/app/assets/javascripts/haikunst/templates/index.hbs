<header>
  <h1>Haikunst!</h1>

  <ul class="right-actions">
    <li>
      <a href="/">
        <span class="glyphicon glyphicon-home"></span>
      </a>
    </li>

    <li>
      <a href="#" class="new-haiku">
        <span class="glyphicon glyphicon-plus"></span>
      </a>
    </li>
  </ul>
</header>

<main>
  <ol class="haikus">
    {{#each haikus}}
      <li>
        <div class="haiku">
          {{#each lines}}
            <div class="line">{{this}}</div>
          {{/each}}
        </div>
        <a class="author" href="{{authorUrl}}">{{created_by.name}}</a>
      </li>
    {{/each}}
  </ol>
</main>
