<header>
  <h1>New Haiku</h1>

  <ul class="right-actions">
    <li>
      <a href="#" class="close">
        <span class="glyphicon glyphicon-remove"></span>
      </a>
    </li>
  </ul>
</header>

<main class="form">
  <form>
    <div class="field">
      <input type="text" name="one" placeholder="Five" value="{{one}}"></input>

      {{#if errors.one}}
        <ol class="input-messages">
          <li class="input-error">{{errors.one}}</li>
        </ol>
      {{/if}}
    </div>

    <div class="field">
      <input type="text" name="two" placeholder="Seven" value="{{two}}"></input>

      {{#if errors.two}}
        <ol class="input-messages">
          <li class="input-error">{{errors.two}}</li>
        </ol>
      {{/if}}
    </div>

    <div class="field">
      <input type="text" name="three" placeholder="Five" value="{{three}}"></input>

      {{#if errors.three}}
        <ol class="input-messages">
          <li class="input-error">{{errors.three}}</li>
        </ol>
      {{/if}}
    </div>

    <button type="submit">Create</button>
  </form>
</main>
